- @user ||= User.new
= user_form do |f|
  = render :partial => 'users/login_field', :locals => {:f => f}
  = render :partial => 'users/password_fields', :locals => {:f => f}
  .form-actions
    = f.button :submit, :value => t(:signup), :class => 'btn-primary'
    = link_to t(:cancel), root_url, :class => :btn
